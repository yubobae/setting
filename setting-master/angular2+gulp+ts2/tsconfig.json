{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "module": "commonjs",
  "moduleResolution": "node",
  "noImplicitAny": true,
  "suppressImplicitAnyIndexErrors": true,
  "removeComments": false,
  "sourceMap": true,
  "target": "es5",
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}
